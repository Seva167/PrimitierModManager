<UserControl x:Class="PrimitierModManager.UpdateDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrimitierModManager"
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" Margin="10">

        <TextBlock>A newer version of Primitier mod manager is available</TextBlock>
        <TextBlock>Click <Hyperlink x:Name="HyperLink" RequestNavigate="Hyperlink_Click">here</Hyperlink> to download the latest version</TextBlock>


        <Button Margin="0 4 0 0" HorizontalAlignment="Right" Style="{StaticResource MaterialDesignFlatButton}" Command="{x:Static wpf:DialogHost.CloseDialogCommand}">Close</Button>
       
    </StackPanel>
</UserControl>
